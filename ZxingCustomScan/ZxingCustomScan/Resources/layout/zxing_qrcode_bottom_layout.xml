<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen75"
              android:orientation="horizontal">
  <TextView
    android:id="@+id/qrcode_btn_photo"
    style="@style/text_center"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:drawableTop="@drawable/selector_ic_photos"
    android:text="相册"
    android:textColor="@color/color_white"/>

  <TextView
  android:id="@+id/qrcode_btn_flashlight"
  style="@style/text_center"
  android:layout_width="0dp"
  android:layout_weight="1"
  android:layout_height="match_parent"
  android:drawableTop="@drawable/selector_ic_flashlight"
  android:text="闪光灯"
  android:textColor="@color/color_white"/>
  
  <TextView
  android:id="@+id/qrcode_btn_photo"
  style="@style/text_center"
  android:layout_width="0dp"
  android:layout_weight="1"
  android:layout_height="match_parent"
  android:drawableTop="@drawable/selector_ic_qrcode"
  android:text="二维码"
  android:layout_centerInParent="true"
  android:textColor="@color/color_white"/>
  
</LinearLayout>